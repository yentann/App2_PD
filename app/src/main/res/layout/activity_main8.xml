<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textViewServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/txtViewServices"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewOCBC"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ocbc" />

    <ImageView
        android:id="@+id/imageViewSAM"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        app:srcCompat="@drawable/sam"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageViewAXS"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        app:srcCompat="@drawable/axs"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/imageViewdbs"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:srcCompat="@drawable/dbs2"
        android:layout_marginTop="80dp"/>

</LinearLayout>
